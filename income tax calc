    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        inputSalary.setText(null);
        outputSalary.setText(null);
        taxRate.setText("Tax Rate:");
        
    }                                        

    private boolean errorInCalculation (String toDouble) {
        double checkForNegative;
        try {
            checkForNegative = Double.parseDouble(toDouble);
            if (checkForNegative > 0) {
                return false;
            }
        } catch (Exception e) {
            return true;
        }  
        return true;
    }
    
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       //check for errors
       
       if (inputSalary.getText().equals("") || errorInCalculation(inputSalary.getText())) {
           
           JOptionPane.showMessageDialog (null, 
                   "MAKE SURE YOU ENTER VALID NUMBER FOR SALARY", "Error!",
                   JOptionPane.ERROR_MESSAGE
           );
        return;
       }
       
       
       //income tax calculation
       
       double userInputSalary = Double.parseDouble(inputSalary.getText());
       double salaryAfterTax = 0;
       
       if (userInputSalary<=11635) {
           salaryAfterTax = ((userInputSalary) - (userInputSalary * 0));
           taxRate.setText("Tax Rate: 0.00%");
       }
       
       if (userInputSalary>11635 && userInputSalary<=42201) {
           salaryAfterTax = ((userInputSalary) - (userInputSalary * 0.2005));
           taxRate.setText("Tax Rate: 20.05%");
       }
       
       if (userInputSalary>42201 && userInputSalary<=45916) {
           salaryAfterTax = ((userInputSalary) - (userInputSalary * 0.2415));
           taxRate.setText("Tax Rate: 24.15%");
       }
       
       if (userInputSalary>45916 && userInputSalary<=74316) {
           salaryAfterTax = ((userInputSalary) - (userInputSalary * 0.2965));
           taxRate.setText("Tax Rate: 29.65%");
       }
               
       if (userInputSalary>74316 && userInputSalary<=84404) {
           salaryAfterTax = ((userInputSalary) - (userInputSalary * 0.3148));
           taxRate.setText("Tax Rate: 31.48%");
       }        
               
       if (userInputSalary>84404 && userInputSalary<=87557) {
           salaryAfterTax = ((userInputSalary) - (userInputSalary * 0.3389));
           taxRate.setText("Tax Rate: 33.89%");
       }
       
       if (userInputSalary>87557 && userInputSalary<=91831) {
           salaryAfterTax = ((userInputSalary) - (userInputSalary * 0.3791));
           taxRate.setText("Tax Rate: 37.91%");
       }
       
       if (userInputSalary>91831 && userInputSalary<=142353) {
           salaryAfterTax = ((userInputSalary) - (userInputSalary * 0.4341));
           taxRate.setText("Tax Rate: 43.41%");
       }
       
       if (userInputSalary>142353 && userInputSalary<=150000) {
           salaryAfterTax = ((userInputSalary) - (userInputSalary * 0.4641));
           taxRate.setText("Tax Rate: 46.41%");
       }
       
       if (userInputSalary>150000 && userInputSalary<=202800) {
           salaryAfterTax = ((userInputSalary) - (userInputSalary * 0.4797));
           taxRate.setText("Tax Rate: 47.97%");
       }
       
       if (userInputSalary>202800 && userInputSalary<=220000) {
           salaryAfterTax = ((userInputSalary) - (userInputSalary * 0.5197));
           taxRate.setText("Tax Rate: 51.97%");
       }
       
       if (userInputSalary>220000) {
           salaryAfterTax = ((userInputSalary) - (userInputSalary * 0.5353));
           taxRate.setText("Tax Rate: 53.53%");
       }
       
       String value = String.format("%.2f",salaryAfterTax);
       outputSalary.setText(value);
        
        
    }                                        

